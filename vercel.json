{
  "version": 2,
  "builds": [
    { "src": "server/server.js", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/server.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)\\.(js|css|map|png|jpg|jpeg|svg|ico|txt|webp|gif|woff2?)", "dest": "/$1.$2" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
