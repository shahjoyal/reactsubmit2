{
  "version": 2,
  "builds": [
    { "src": "server/server.js", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/server.js" },
    { "handle": "filesystem" },                 // <-- serve real files first (e.g., /assets/*.js, *.css)
    { "src": "/(.*)", "dest": "/index.html" }   // <-- SPA fallback for client-side routes
  ]
}
